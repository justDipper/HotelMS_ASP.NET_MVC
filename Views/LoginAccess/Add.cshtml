@{
    ViewData["Title"] = "Create User Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h1 class="text-center">Create User Account</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="LoginAccess" asp-action="Add">

                        <div class="mb-3">
                            <label for="customer_id" class="form-label">Customer ID</label>
                            <input type="text" name="customer_id" id="customer_id" class="form-control" placeholder="ex. bh001" />
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" placeholder="ex. user23" />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="text" name="password" id="password" class="form-control" placeholder="******" />
                        </div>
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Fullname</label>
                            <input type="text" name="fullname" id="fullname" class="form-control" placeholder="ex. Juan Dela Cruz" />
                        </div>
                        <div class="mb-3">
                            <label for="birth_date" class="form-label">Birthdate</label>
                            <input type="date" name="birth_date" id="birth_date" class="form-control" placeholder="2024-909" />
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" name="address" id="address" class="form-control" placeholder="ex. Sagay City" />
                        </div>
                        <div class="mb-3">
                            <label for="gender" class="form-label">Gender</label>
                            <input type="text" name="gender" id="gender" class="form-control" placeholder="ex. Male" />
                        </div>
                        <div class="mb-3">
                            <label for="access_type" class="form-label">Access</label>
                            <input type="text" name="access_type" id="access_type" class="form-control" placeholder="ex. User" />
                        </div>

                        <div class="text-left pt-1 mb-5 pb-1">
                            <button class="btn btn-primary btn-block" type="submit">Create</button>
                        </div>
                    </form>
                    <a href="javascript:history.back()" class="text-center d-block mt-3">← Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
